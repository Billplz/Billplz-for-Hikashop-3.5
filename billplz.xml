<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.2.0" method="upgrade" group="hikashoppayment">
	<name>Billplz Payment Plugin for Hikashop 3.5</name>
	<creationDate>08/08/2018</creationDate>
	<version>3.2.0</version>
	<author>Wan @ Billplz</author>
	<authorEmail>wan@billplz.com</authorEmail>
	<authorUrl>https://www.billplz.com</authorUrl>
	<copyright>(C) 2018 Billplz Sdn. Bhd. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to setup your Billplz payment system</description>
	<files>
		<filename plugin="billplz">billplz.php</filename>
		<filename>billplz_end.php</filename>
		<filename>API.php</filename>
		<filename>Connect.php</filename>
		<filename>logo-billplz.png</filename>
		<filename>index.html</filename>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>
